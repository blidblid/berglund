    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src",
    "./scripts",
    "./builders.json",
    "./package.json",
    "./schema.json",
    "./src/builders/app-shell/schema.json",
    "./src/builders/browser/schema.json",
    "./src/builders/dev-server/schema.json",
    "./src/builders/extract-i18n/schema.json",
    "./src/builders/karma/schema.json",
    "./src/builders/ng-packagr/schema.json",
    "./src/builders/protractor/schema.json",
    "./src/builders/server/schema.json"
  ]
}
