{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FeatureConfig",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of the feature.",
      "type": "string"
    },
    "id": {
      "description": "Id of the feature.",
      "type": "string"
    },
    "category": {
      "description": "Category of the feature.",
      "type": "string"
    },
    "readmePath": {
      "description": "Relative file path of readme file.",
      "default": "README.md",
      "type": "string"
    },
    "entryPointPath": {
      "description": "Relative file path of entry point used in API generation.",
      "default": "index.ts",
      "type": "string"
    }
  }
}
