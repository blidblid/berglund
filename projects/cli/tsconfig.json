    "target": "es2019",
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
